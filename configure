#!/bin/sh

usg() {
    cat <<EOF
usage: configure [OPTION]

Options:

  --prefix <prefix>          set prefix bop installation prefix;
  	   		     default: ${HOME}/prefix
  --help                     print help message


Compilation (after running configure):

make [VARS]

VARS:
  
  CXX           c compiler (default: g++)
  CXXFLAGS      c flags for serial version
  MPICXX        mpi compiler (default: mpic++)
  MPICXXFLAGS   c flags for mpi version

EOF
    exit 1
}

dump() {
    cat <<EOF
prefix=$prefix
EOF
}

prefix=${HOME}/prefix

while test $# -gt 0; do
    case "$1" in
	--prefix)
	    shift
	    prefix="$1"
	    ;;
	--help)
	    usg
	    ;;
	*)
	    usg
	    ;;
    esac
    shift
done

dump > make/usr.mk

exit 0
